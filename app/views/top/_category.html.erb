
	<div class="thumbnail">
		<div class="category_box">
			<h2 class="">タイトル</h2>
			<div>
				<nav>
					<ul>
					<% animes.each do |a|%>
						<li>
							<%= link_to anime_path(a) do %>
								<% if a.products.count > 0 %>
									<%= a.anime_name %>(<%= a.products.count %>)
								<% end %>
							<% end %>
						</li>
					<% end %>
					</ul>
				</nav>
			</div>
			<h2 class="">カテゴリー</h2>
			<div>
				<nav>
					<ul>
					<% categories.each do |c|%>
						<li>
							<%= link_to category_path(c) do %>
								<% if c.products.count > 0 %>
									<%= c.category_name %>(<%= c.products.count %>)
								<% end %>
							<% end %>
						</li>
					<% end %>
					</ul>
				</nav>
			</div>
			<h2>アーティスト</h2>
			<div>
				<nav>
					<ul>
					<% artists.each do |a|%>
						<li>
							<%= link_to artist_path(a) do %>
								<% if a.products.count > 0 %>
									<%= a.artist_name %>(<%= a.products.count %>)
								<% end %>
							<% end %>
						</li>
					<% end %>
					</ul>
				</nav>
			</div>
			<%= link_to "全商品一覧", products_path %>
		</div>
	</div>
