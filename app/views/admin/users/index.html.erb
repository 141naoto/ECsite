<h2>User一覧</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>id</th>
			<th>名前</th>
			<th>メールアドレス</th>
			<th colspan='2'></th>
		</tr>
	</thead>

	<% @users.each do |user| %>
	<tbody>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<td><%= link_to "詳細", user_path(user), class:"btn-sm btn-success" %>
				<%= link_to "削除", user_path(user), method: :delete, data: {confirm: "本当に消しますか?" }, class:"btn-sm btn-danger" %>
			</td>
		</tr>
	</tbody>
	<% end %>
</table>
