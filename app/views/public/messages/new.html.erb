<h1>お問い合わせフォーム</h1>

<%= form_for(@message) do |f| %>

<h4>名前</h4>
<%= f.text_field :name %>

<h4>メールアドレス</h4>
<%= f.email_field :mail %>

<h4>お問い合わせ内容</h4>
<%= f.text_area :text %>

<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.submit "送信", class:"btn btn-primary" %><br>
<%= link_to "戻る", books_path, class: "back" %>

<% end %>