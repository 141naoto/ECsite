<% if flash[:notice] %>
<div class="alert alert-success">
	<%= flash[:notice] %>
</div>
<% end %>

<h1>お問い合わせフォーム</h1>

<%= form_for(@message) do |f| %>

<h4>名前</h4>
<%= f.text_field :name %>

<h4>メールアドレス</h4>
<%= f.email_field :mail %>

<h4>お問い合わせ内容</h4>
<%= f.text_area :text %><br>

<%= f.submit "送信", class:"btn btn-primary" %><br>
<%= link_to "戻る", root_path, class: "back" %>

<% end %>