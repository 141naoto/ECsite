<% if flash[:alert] %>
<div class="alert alert-danger">
  <%= flash[:alert] %>
</div>
<% end %>

<h1>CD詳細</h1>

<div class = "item" >
  <div class = "product-image" >
    <%= attachment_image_tag @product, :image %>
  </div>
  <div class = "product-info" >
  	<table class="table">
    <tr>
        <th>CD概要</th>
    </tr>

        <tr>
        	<td><p>カテゴリー</p></td>
        	<td>
            <% @product.categories.each do |product| %>
            <%= product.category_name %>
            <% end %>
          </td>
      	 </tr>
        <tr>
          <td><P>アーティスト</P></td>
          <td>
            <%= @product.artist.artist_name %>
          </td>
        </tr>

        <tr>
          <td><p>シングル・アルバム名</p></td>
          <td>
            <%= @product.title %>
          </td>
        </tr>
        <tr>
          <td><p>レーベル名</p></td>
          <td>
            <%= @product.label %>
          </td>
        </tr>
        <tr>
          <td><p>発売日</p></td>
          <td>
            <%= @product.release %>
          </td>
        </tr>
        <tr>
          <td><p>値段</p></td>
          <td>
            <%= @product.price %>
          </td>
        </tr>
        <tr>
          <td><p>在庫数</p></td>
          <td>
            <% if current_admin %>
            <%= @product.stock %>
            <% elsif @product.stock == 0 then %>
             <p>在庫なし</p>
            <% else %>
             <p>在庫あり</p>
            <% end %>
          </td>
        </tr>
    </table>

         <% if current_user %>
            <%= form_for(@product, url: cart_add_item_path(@product.id), html: {method: "post"}) do |f| %>
              <p>購入個数:</p>
              <%= f.number_field :stock, required:true, min:'1', max:'product.stock' %>
              <%= f.submit "カートに入れる" %>
            <% end %>
        <% end %>
  </div>
</div>


<table class="table">
  <tr>
    <th>
      <p>商品詳細</p>
    </th>
    <th>
      <p>曲名一覧</p>
    </th>
  </tr>
  <tr>
    <th></th>
    <th>
      <p>
        <% @discs.each do |disc| %>
        <%= disc.disc_name %>
      </p>
      <p>
        <% disc.tracks.each do |track| %>
        <%= track.music %>
      </p>
        <% end %>
     <br>
        <% end %>
    </th>
</table>
<table class="table">
  <tr>
    <th>
      <p>商品紹介</p>
    </th>
  <tr>
    <td>
      <%= @product.introduction %>
    </td>
  </tr>
</table>
<% if current_admin %>
  <%= link_to"編集", edit_product_path %>
<% end %>
 <%= link_to "戻る", :back, class: "back" %>
