
<% @products.each do |product| %>

 <li class = "item" >

  <div class = "product-image" >
      <%= link_to product_path(product.id) do %>
      <%= attachment_image_tag prodect, :image %>
      <% end %>
  </div>

  <div class = "product-info" >
      <li> <% if product.favorited_by?(current_user) %>
           <%= link_to "お気に入り", product_favorites_path, method: :post %>
           <% end %> </li>

      <li> <%= product.artist_id %> </li>
      <li> <%= product.price %> </li>
      <li> <% if product.stock == 0 then %>
             在庫なし
           <% else %>
             在庫あり
           <% end %>
      </li>
</div>
</li>

<% end %>