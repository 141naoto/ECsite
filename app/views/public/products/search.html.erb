<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'category', categories: @categories, artists: @artists, animes: @animes %>
    <div class="col-xs-9">
      <h3>商品検索一覧</h3>
      <% @productsearch.each do |product| %>
      <div class="col-xs-4">
        <div class="thumbnail">
          <div class="productbox">
            <div class = "product-image" >
                <%= link_to product_path(product.id) do %>
                  <%= attachment_image_tag product, :image, :fill, 100, 100 %>
                <% end %>
            </div>
            <div class = "product-info" >
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <ul>
                      <li>シングル・アルバム名</li>
                      <li>
                        <%= link_to product_path(product.id) do %>
                          <%= product.title %>
                        <% end %>
                      </li>
                    </ul>
                  </td>
                </tr>
              </tbody>
            </table>
            <table>
              <thead>
                <tr>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <ul>
                      <li>カテゴリー</li>
                      <li>
                        <% product.categories.each do |cate| %>
                          <%= link_to category_path(cate.id) do  %>
                            <%= cate.category_name %>
                          <% end %>
                        <% end %>
                      </li>
                    </ul>
                  </td>
                </tr>
              </tbody>
            </table>
            <table>
              <thead>
                  <tr>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <ul>
                        <li>アーティスト</li>
                        <li>
                          <%= link_to artist_path(product.artist.id) do  %>
                            <%= product.artist.artist_name %>
                          <% end %>
                        </li>
                      </ul>
                    </td>
                  </tr>
                </tbody>
            </table>
            <ul>
              <li>
                ¥<%= product.price %>
              </li>
              <li>
                <% if product.stock == 0 then %>
                  <p>在庫なし</p>
                <% else %>
                  <p>在庫あり</p>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
      <div class="col-xs-9">
        <h3>アーティスト検索一覧</h3>
          <% @artistsearch.each do |a| %>
          <ul>
            <li>
              <%= link_to artist_path(a) do %>
              <%= a.artist_name %>
              <% end %>
            </li>
          </ul>
          <% end %>
      </div>
    </div>
  </div>
</div>
