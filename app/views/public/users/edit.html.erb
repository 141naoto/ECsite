<div class="bg-image">
  <div class = "bg-mask" >
<div class = "container">
	<div class = "row" >
		<div class = "edit">

			<h3>User情報の編集</h3>

			<%= form_for(@user) do |f| %>

			<h4>フリガナ</h4>
			<%= f.text_field :name_kana %>

			<h4>名前</h4>
			<%= f.text_field :name %>

			<h4>郵便番号</h4>
			<%= f.text_field :post_code %>

			<h4>住所</h4>
			<%= f.text_field :address %>

			<h4>電話番号</h4>
			<%= f.telephone_field :phone %>

			<h4>メールアドレス</h4>
			<%= f.email_field :email %><br>



			<div style = "padding-top: 30px;" >
				<%= f.submit "更新", class:"btn btn-primary" %>
				<% end %>

				<%= link_to "戻る", user_path, class: "btn btn-info" %>
			</div>
		</div>

	</div>
</div>
</div>
</div>